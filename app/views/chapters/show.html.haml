- model_class = Chapter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @chapter.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @chapter.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), chapters_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_chapter_path(@chapter), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), @chapter, :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'