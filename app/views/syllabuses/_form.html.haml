= simple_form_for @syllabus, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :description
  = f.association :program
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), syllabuses_path, :class => 'btn'
