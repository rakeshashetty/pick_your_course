- model_class = Membership
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @membership.user.name
%p
  %strong= model_class.human_attribute_name(:role_id) + ':'
  %br
  = @membership.role.name
%p
  %strong= model_class.human_attribute_name(:course_id) + ':'
  %br
  = @membership.program.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), memberships_path, :class => 'btn'
  - if can? :manage, @membership
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_membership_path(@membership), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), membership_path(@membership), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
